@import '~@assets/style/mixins'

#personal_supplement_add
  padding 10px 40px
  .detail_content
    &.ant-card-bordered
      border none
      bd-b(#d8d8d8)
    .ant-card-body
      padding 30px 0 20px 0
    .detail_item
      padding 10px 0
      &.todo
        .ant-col
          color #F5222D
      .ant-col
        color #666
        wb()
        &:first-child
          text-align right
          color #333
  .detail_title
    padding-top 30px
    padding-bottom 20px
    font-weight 700
    f14()
    color #333
  .ant-form
    .star
      color #F5222D
  .table_content
    margin-top 20px
    .ant-card-body
      padding 0
    .table_header
      color #333
      font-weight 700
      background-color #fafafa
      padding-top 20px
      padding-bottom 15px
    .table_row
      padding 15px 0
      > .ant-col
          padding-right 10px
          wb()
          &.flex-start
            padding-top 6px
          &:last-child
            padding-right 45px
          > .ant-form-item
              margin 0
              .ant-form-item-control
                line-height 32px
              input
                padding 4px 11px;/*no*/
              .ant-form-explain
                display none
      .table_title
        color #333
        font-weight 700
        tr()
        flex-align()
        justify-content flex-end
  .supplement_reason
    > .ant-col
        display block
        text-align left
  .ant_textarea
    width 600px
    height 100px
  .detail_total
    padding-top 20px
    padding-bottom 10px
    font-weight 700
    tr()
    b
      padding-right 20px
    span
      color #40A9FF
      &.company
        padding-right 20px
  .ant-form-inline
    .ant-form-item-with-help
      margin-bottom 0
  .ant-form-explain
    display none !important
// 模态框
.ant-modal
  .ant-modal-body
    padding 0.12rem
  .tips_text
    color #333
    tc()
    margin 0
  .remove_button_wrapper
    padding-top 46px
    tc()
