@import '~@assets/style/mixins'

.salary-add-label-title {
  padding: 0;
  margin-top: 10px;
  margin-bottom: 20px;
  img {
    width: 20px;
    height:18px;
    display: inline-block;
  }
  span {
    height:18px;
    line-height:18px;
    font-size:16px;
    margin-left: 10px;
    color:rgba(51,51,51,1);
    font-weight: bold;
  }
  span:nth-child(3){
    font-size:14px;
    font-weight: 500;
    color: #c0c0c0;
  }
}
.salary-message {
  margin-top: 20px;
  margin-left: 26px;
}

#staff_salary_add
  padding 40px
  .form_item
    margin-bottom 0
    padding-bottom 20px
    &.salary_no-necessary
      .ant-form-item-label
        min-width 90px
    &.salary_probation
      .ant-form-item-label
        min-width 120px
    &.salart_form_label_right
      float right
      margin-right 32px
    .ant-form-item-control-wrapper
      width 220px
    .ant-select-selection,
    .ant-select-selection__rendered,
    .ant-form-item-label,
    .ant-form-item-control,
    .ant-input
      height 32px
      line-height 32px
    .ant-form-explain
      display none
  .ant-collapse
    margin-top 40px
    .ant-collapse-item
      border none
    .ant-collapse-header
      padding 2px 0
      background-color rgba(244, 250, 255, 1)
      bd(#8CCBFF)
      border-radius 3px
    .ant-collapse-content
      padding-top 20px
      .ant-collapse-content-box
        padding 0
  .ant-card
    margin-bottom 10px
    .ant-card-head
      padding 0 30px
      border none
      background-color #FAFAFA
      .ant-card-head-title
        f14()
        padding 14px 0
        font-weight 500
        color #333333
    .ant-card-body
      padding 30px 30px 0
      .ant-row-flex
        padding-bottom 30px