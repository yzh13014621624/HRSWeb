#trans-contract-detail-page {
  padding: 40px;
  padding-right: 0;
  .content-tips {
    height: 30px;
    line-height: 30px;
    background #FFFBE6;
    color #F6B524
    padding: 0 15px;
    border: 1px solid #FFEAA6;/*no*/
  }
  .date-range-disable {
    color: #999 !important;
    .ant-input[disabled] {
      color: #999;
    }
  }
  .span-font {
    font-size:14px;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:20px;
  }
  .span-font-size {
    padding-left: 10px;
  }
  .cfrom-item {
    width: 390px;
    margin-bottom: 10px;
    >span {
      width: 220px;
    }
    .ant-form-item-control {
      line-height: 39px;/*no*/
    }
  }
  .cfrom-item1 {
    .ant-form-item {
      margin-right: 0;
    }
  }
  .tip-font {
    font-size:12px;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:17px;
    margin-top: 6px;
  }
  .ant-upload-list-picture-card {
    margin-top: 60px
  }
  .upload-list-inline .ant-upload-list-item {
    width: 150px;
    height: 212px;
    margin: 20px 0px 8px 40px;
  }
  .upload-list-inline .ant-upload-list-item:nth-child(8n-7) {
    margin: 20px 0px 8px 0px;
  }
  .upload-list-inline .ant-upload-list-picture-card .ant-upload-list-item-actions .anticon-eye-o, .ant-upload-list-picture-card .ant-upload-list-item-actions .anticon-delete{
    font-size: 24px;
    margin: 0 25px 0 12px;
  }
  .ant-upload.ant-upload-select-picture-card {
    position: absolute;
    width: 650px;
    height: 0;
    margin: 0 0 0 -10px;
    text-align: center;
    vertical-align: middle;
    background-color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: border-color 0.3s ease;
  }
  .select-width-220 {
    width: 220px;
  }
  .range-width-300 {
    width: 1.15rem;
    // margin-left: 20px;
  }
  .tree-label {
    margin-bottom: 20px;
    margin-right: 0;
  }
  .loader-btn {
    width: 300px;
    height: 38px;
    background: rgba(145,175,200,1);
    border: 1px solid rgba(124,154,177,1);/*no*/
    color: #fff;
    margin-top: 10px;
  }
  .btn-margin-top {
    margin-top: 20px;
    .ant-col-16 {
      width: 100%;
    }
  }
  .upload-img {
    margin 0
    .ant-col,
    .ant-col-16 {
      width: 100%;
    }
    & + .upload-img {
      margin-top 20px
    }
  }
}
.modal-box {
  .ant-modal-content {
    .ant-modal-close-x {
      position: relative;
      width: 40px;
      height: 40px;
      i {
        position: absolute;
        right: 5px;
        top: 10px;
        color: #fff;
      }
    }
    .ant-modal-close {
      background: rgba(0,0,0,0.5);
      border-radius: 0 0 0 50px;
    }
  }
}

.sumbit-btn {
  font-size: 14px;
  font-weight: 500;
  color: rgba(255,255,255,1);
  line-height: 20px;
  margin-right: 30px;
  width: 160px;
  height: 38px;
  border: none;
 }
 .cancel-btn {
  border-radius: 5px;
  width: 160px;
  height: 38px;
  font-size: 14px;
  font-weight: 500;
  color: rgba(64,169,255,1);
  border: 1px solid rgba(64,169,255,1);/*no*/
 }
