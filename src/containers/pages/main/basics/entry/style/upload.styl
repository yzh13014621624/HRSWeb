.ant-upload-container {
  background:rgba(255,255,255,1);
  border-radius:10px;
  cursor pointer;
  border:1px dashed rgba(209,217,237,1);/*no*/
  box-sizing border-box;
  position relative;
  .cus-modal-content {
    .ant-modal-content {
      .ant-modal-close {
      }
      .ant-modal-body {
        padding 0;
      }
    }
    .modal-close {
      position: absolute;
      top: 10px;
      right: 10px;
      z-index: 10;
      padding: 0;
      color: rgba(0, 0, 0, 0.45);
      font-weight: 700;
      line-height: 1;
      text-decoration: none;
      background: transparent;
      border: 0;
      outline: 0;
      cursor: pointer;
    }
  }
}
.ant-upload-container:hover {
  border 1px dashed #007AFF;/*no*/
}
.ant-upload-content {
  width 100%;
  height 100%;
  display inline-block;
  border-radius:10px;
  cursor pointer;
  position relative;
  outline:none;
  box-sizing border-box;
}
.ant-upload-content-bg {
  width 100%;
  height 100%;
  border-radius:10px;
  background-size 100% 100%;
  position relative;
  display: flex;
  justify-content: center;
  align-items: center;
  .ant-upload-content-text {
    width 100%;
    height 100%;
    z-index 997;
    .icon, span, p {
      display block;
      text-align center;
      font-size:12px;
      font-family:PingFangSC-Regular,PingFangSC;
      font-weight:400;
      color:rgba(15,62,115,1);
    }
    .icon {
      padding: 24px 0 19px;
      line-height:24px;
    }
    span {
      line-height:20px;
    }
    p {
      color:#999999;
      padding-top 6px;
      line-height:20px;
    }
  }
  .ant-upload-img-bg {
    position absolute;
    margin-top 24px;
    top 0px;
    z-index 996;
  }
}

/* 弹出提示框 */
@keyframes fadeIn {
  0%    {opacity: 0}
  100%  {opacity: 1}
}
.ant-upload-after-modal {
  width 100%;
  height 100%;
  position absolute;
  top 0px;
  left 0px;
  z-index 998;
  border-radius:10px;
  box-sizing border-box;
  > img {
    display block;
    width 100%;
    height 100%;
    border-radius:10px;
  }
  .ant-upload-edit-content {
    position absolute;
    z-index: 999;
    left:0;
    bottom: 0;
    width 100%;
    height 100%;
    box-sizing border-box;
    text-align: center;
    border-radius:10px;
    background:rgba(0,0,0,0.5);
    overflow hidden;
    display none
    justify-content space-around
    align-items center
    padding 0 10%
  }
}
.ant-upload-after-modal:hover {
  .ant-upload-edit-content {
    display flex
    animation:fadeIn .5s;
  }
}
