.entry-add-from {
  .ant-form-item-with-help {
    margin-bottom: 0;
  }
  .form-item {
    width: 100%;
    min-height: 70px;
    .ant-input-affix-wrapper,
    .ant-select,
    input.ant-input {
      width: 200px;
    }
    .ant-form-explain {
      width: 250px;
    }
    .ant-calendar-picker {
      min-width: unset;
    }
    .detail {
      display: inline-block;
    }
  }
  .entry_pic_item {
    &:first-child {
      margin-right 16px;/*no*/
      .ant-form-item {
        margin 0
      }
    }
  }
}

.gutter-row-p {
  margin-bottom: 5px;
}
.gutter-row {
  background: #F2F6FC;
  padding-bottom: 5px;
  .form-item {
    margin: 0;
    min-height: auto;
    .ant-input-affix-wrapper,
    .ant-select,
    input {
      width: 170px!important;
    }
    .ant-form-explain {
      width: 250px;
    }
  }
  .form-item-line {
    min-height: 70px;
  }
}
.gutter-row-title {
  padding: 12px 0;
  > span {
    height:18px;
    line-height:18px;
    font-size:16px;
    margin-left: 10px;
    color:rgba(51,51,51,1);
    font-weight: bold;
  }
  > span:nth-child(3){
    font-size:14px;
    font-weight: 500;
    color: #c0c0c0;
  }
  > .add-btn {
    padding: 0 18px;
  }
  .waring-title {
    float: right;
    height:30px;
    background:rgba(255,251,230,1);
    border:1px solid rgba(255,229,143,1);/*no*/
    font-size:14px;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(244,168,0,1);
    line-height:30px;
    padding 0 13px;
    > span {
      margin-left:3px;
    }
  }
}
.gutter-icon-title,
.gutter-icon {
  text-align: center;
  padding:5px 0;
}

