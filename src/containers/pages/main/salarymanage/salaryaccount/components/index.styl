// 核算下载模态框
.insured-modal
  font-size 16px
  font-weight 500
  color rgba(51,51,51,1)
  line-height 22px
  .icon-style
    margin-top 55px
    margin-bottom 10px
  .title-success
    font-size 18px
    font-weight 500
    color rgba(51,51,51,1)
    line-height 25px
    margin-bottom 20px
  .tips-success
    font-size 14px
    font-weight 400
    color rgba(102,102,102,1)
    line-height 20px
  .load-cancel-btn
    font-size 14px
    font-weight 500
    color rgba(255,255,255,1)
    line-height 20px
    width 160px
    margin-left 10px
    height 38px
  .comfirm-btn
    font-size 14px
    font-weight 500
    color rgba(255,255,255,1)
    line-height 20px
    width 160px
    height 38px
    background: rgba(64,169,255,1)

// 关帐并归档模态框
.close-modal
  .comfirm-btn
    font-size 14px
    font-weight 500
    color rgba(255,255,255,1)
    line-height 20px
    margin 20px 30px 0 10px
    width 160px
    height 38px
    background: rgba(64,169,255,1)
  .cancel-btn
    font-size 14px
    font-weight 500
    color rgba(64,169,255,1)
    line-height 20px
    border-radius 5px
    width 160px
    height 38px
    border 1px solid rgba(64,169,255,1);/*no*/

