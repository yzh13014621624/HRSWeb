.template-modal
  height 650px
  .template-form
    padding-left 30px
  .checked-all
    float left
    text-align left
    margin-bottom 20px
  .set-check-group
    width 100%
    text-align left
    label
      width 20%
      margin-bottom 20px
      margin-right 0px
      span
        color #9F9F9F
  .set-check-color
    width 100%
    text-align left
    label
      width 20%
      margin-bottom 20px
      margin-right 0px
      span
        color #333
  .comfirm-btns
    font-size 14px
    font-weight 500
    color rgba(255,255,255,1)
    line-height 20px
    margin 20px 30px 0 10px
    width 160px
    height 38px
    background: rgba(64,169,255,1)
  .comfirm
    font-size 14px
    font-weight 500
