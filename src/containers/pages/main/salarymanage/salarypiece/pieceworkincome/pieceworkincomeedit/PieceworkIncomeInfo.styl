    text-align: center;
    border: none;
    padding: 12px 0;
    background-color: #89B4E9;
    color: #FFFFFF;
    position: relative;
    top: 0;
    border-radius: 8px 8px 0 0;
  }
  .ant-table-thead > tr > th, .ant-table-tbody > tr > td {
    padding: 12px 16px;
  }
  .last-table {
    border-bottom: none; 
  }
  .ant-form-item-control {
    line-height: 39px; /*no*/
  }
  table {
