#PieceworkIncomeEdit {
  padding: 40px;
  .PieceworkIncomeEdit-title-icon {
    margin-bottom: 15px;
    .PieceworkIncomeEdit-title-text {
      color: #333333;
      font-size: 16px;
      font-weight: 600;
    }
  }
  .PieceworkIncomeEdit-title-icon-bottom {
    margin-top: 45px;
    .PieceworkIncomeEdit-title-text {
      color: #333333;
      font-size: 16px;
      font-weight: 600;
    }
  }
  .PieceworkIncomeEdit-top-info {
    margin-left: -30px;
  }
  .ant-form-item-label > label {
    color: #333333;
    font-size: 14px;
  }
  .text-color {
    color: #666666;
    font-size: 14px;
  }
  .contract-page-button {
    margin-top: 40px;
    color: #fff;
    line-height: 20px;
    margin-right: 30px;
    border-radius: 5px;
    width: 160px;
    height: 38px;
    font-size: 14px;
