@import '~@assets/style/mixins'

.dynamicform {
  .title {
    padding-bottom: 20px;
  }
  .w-480 {
    // width: 480px;
    // margin-left: 40px;
    // padding: 20px;
    // display: inline-block;
    // vertical-align: top;
    // box-shadow:0px 0px 8px 0px rgba(0,0,0,0.1);
    // bd(rgba(235,235,235,1));
    span:nth-child(1) {
      color: #F5222D;
    }
    span:nth-child(2) {
      font-size:14px;
      font-weight:600;
      height:20px;
      line-height:20px;
    }
  }
  .ant-input, .ant-form-item-children {
    display: inline-block;
    width: 90px !important;
    line-height: 44px;
    vertical-align: inherit;
  }
  .ant-input:not(:last-child) {
    padding: 0 18px 0 5px !important;
  }
  .linefrom {
    height: 44px;
    line-height: 44px;
    background:rgba(242,246,252,1);
    margin-bottom: 10px;
    padding-left: 5px;
  }
  .add {
    height: 30px;
    line-height: 30px;
    font-size:14px;
    bd(rgba(64,169,255,1));
    color: rgba(64,169,255,1);
    font-weight: 400;
  }
  .addorreduceimg {
    width: 14px;
    margin-right: 3px;
  }
  .addBtn {
    text-align: center;
  }
  .ant-input-suffix {
    right: 6px;
  }
  .ant-form-item {
    margin-bottom: 0;
  }
  .ant-col-2, .ant-col-4 {
    display: flex;
    justify-content: center;
  }
  .ant-col-2 {
    width: 10.333333%;
  }
  .ant-col-4 {
    width: 18.666667%;
  }
  .ant-form-item-control {
    line-height: 32px;
  }
}