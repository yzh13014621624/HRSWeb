@import '~@assets/style/mixins'

.table-td-select-dropdown
	.ant-select-dropdown-menu-item
		text-align center

#schedulingAdd
	padding 0px 40px 16px 40px

	.line
		bd-b(rgba(216, 216, 216, 1))

	.schedulingAdd-item
		.schedulingAdd-item-title
			margin 21px 0 30px 0

			span
				color #333333
				font-weight 700
				font-size 16px
				margin-left 6px

		.schedulingAdd-item-row
			margin-bottom 30px

			.ant-form-item
				margin 0

		.schedulingAdd-item-table
			margin-bottom 30px

			.schedulingAdd-item-table-title
				height 50px
				text-align center
				line-height 50px
				font-size 14px
				color #666666
				background rgba(245, 245, 245, 1)
				bd(rgba(232, 232, 232, 1))

				span
					color #333333
					font-size 16px
					font-weight 700

			.schedulingAdd-item-table-content
				bd-l(rgba(232, 232, 232, 1))

				.table-tr
					bd-r(rgba(232, 232, 232, 1))
					bd-b(rgba(232, 232, 232, 1))

					.table-th
						height 50px
						color #333333
						text-align center
						line-height 50px
						font-weight 700
						background rgba(250, 250, 250, 1)

					.table-td
						position relative
						height 48px
						color #666666
						font-size 14px
						line-height 48px
						text-align center

						.icon-triangle
							position absolute
							z-index 99
							right 0
							bottom 0
							width 0
							height 0
							border-bottom 10px solid #CBCBCB
							border-left 10px solid transparent
						.icon-work
							position absolute
							z-index 99
							left 2px
							top 2px

						.ant-form-item-control
							line-height 0

						.table-td-select
							width 100%
							line-height 48px

							.ant-select-selection
								height 48px
								line-height 48px
								border none
								outline none

							.ant-select-selection__rendered
								line-height 48px

							.ant-select-selection__placeholder
								text-align center

							.ant-select-selection-selected-value
								width 100%

						.table-td-select-blue
							width 100%
							line-height 48px

							.ant-select-selection
								height 48px
								line-height 48px
								border none
								outline none
								background-color: #CAE6FF
								.ant-select-selection__clear
									background-color: #CAE6FF


							.ant-select-selection__rendered
								line-height 48px

							.ant-select-selection__placeholder
								text-align center

							.ant-select-selection-selected-value
								width 100%

						.table-td-select-red
							width 100%
							line-height 48px

							.ant-select-selection
								height 48px
								line-height 48px
								border none
								outline none
								background-color: #FFDFDE
								.ant-select-selection__clear
									background-color: #FFDFDE


							.ant-select-selection__rendered
								line-height 48px

							.ant-select-selection__placeholder
								text-align center

							.ant-select-selection-selected-value
								width 100%

						.table-td-select-green
							width 100%
							line-height 48px

							.ant-select-selection
								height 48px
								line-height 48px
								border none
								outline none
								background-color: #D2F1D7
								.ant-select-selection__clear
									background-color: #D2F1D7


							.ant-select-selection__rendered
								line-height 48px

							.ant-select-selection__placeholder
								text-align center

							.ant-select-selection-selected-value
								width 100%

	.schedulingAdd-btn
		margin-top 10px

		.confrim-btn
			width 160px
			height 38px
			margin-right 30px

		.cancel-btn
			width 160px
			height 38px
			color #40A9FF
			bd(#40A9FF)
	.ant-select-selection-selected-value
		color: #999
