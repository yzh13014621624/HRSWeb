@import 'antd/input'
@import 'antd/button'
@import 'antd/textarea'
@import 'antd/select'
@import 'antd/datepicker'
@import 'antd/form'

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-size: 12px;/*no*/
}
 html, body {
  width: 100%;
  height: 100%;
  font-family: "PingFang SC","Microsoft YaHei","微软雅黑","inherit","Arial";
}
body {
  position: relative;
  -webkit-overflow-scrolling: touch;
}
p {
  margin: 0;
}

#app {
  height: 100%;
  box-sizing: border-box;
}
/* @module scrollbar(滚动条) start */
::-webkit-scrollbar-track-piece {
  background-color:#f8f8f8;
}
::-webkit-scrollbar {
  width:6px;
  height:6px;
  display: none;
}
::-webkit-scrollbar-thumb {
  background-color:#dddddd;
  background-clip:padding-box;
  min-height:28px;
  border-radius: 5px;
}
::-webkit-scrollbar-thumb:hover {
  background-color:rgb(167, 164, 164);
}
/* @module scrollbar(滚动条) end */

/* 一期基础信息部分公共样式 start */

/* table 表格样式 start */
.ant-table-body::-webkit-scrollbar {
  display: block;
  height: 10px;
}
.ant-table-body::-webkit-scrollbar-thumb {
  border-radius: 0;
}
// .ant-table-fixed-left,
.ant-table-fixed-right {
  bottom: 10px;
}
/* table 表格样式 end */

.error_border {
  input {
    border-color: #F5222D!important;
  }
}
.table_button_wrapper {
  padding-top: 10px;
  padding-bottom: 20px;
}
.table_button_item {
  height 32px
  line-height 32px
}
.table_button_item + .table_button_item {
  margin-left: 10px;
}

/* 一期基础信息部分公共样式 end */

/* @module page-content (界面的缩放) start */
.custom-page-btn {
  margin-left: 10px;
}

/* @module page-content (界面的缩放) end */

.custom-ant-btn{
  border:1px solid rgba(64,169,255,1);/*no*/
  font-size: 14px;/*no*/
  font-weight: 500;
  color:rgba(64,169,255,1);
}

.build-version {
  position fixed
  font-size 12px;
  bottom 5px;
  right 5px;
  padding 10px
}
.version-color {
  color #ffffff
}
.version-color-b {
  color #c0c0c0
}

